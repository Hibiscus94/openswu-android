<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/x5"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/grades_recycleview_km"
        android:layout_width="@dimen/x150"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/grades_recycleview_cj"
        android:layout_width="@dimen/x50"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/grades_recycleview_jd"
        android:layout_width="@dimen/x50"
        android:layout_height="wrap_content"
        android:ellipsize="end"

        android:gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/grades_recycleview_xf"
        android:layout_width="@dimen/x50"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/grades_recycleview_ksxz"
        android:layout_width="@dimen/x100"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/grades_recycleview_kcxz"
        android:layout_width="@dimen/x100"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="20dp"/>
</LinearLayout>