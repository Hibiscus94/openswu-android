<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLibMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewLibMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/linearLayoutLibError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:text="获取数据失败,点击重试"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f0f0f0"
            android:layout_weight="6"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="bottom|center"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f0f0f0"
            android:gravity="top|center"
            android:paddingTop="10dp"
            android:text="请检查网络是否正常 ╮(╯▽╰)╭ "
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#f0f0f0"
            android:gravity="top|center"
            android:paddingTop="10dp"
            android:text="或者在网络信号好的地方重试"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabLibPerson"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/lib_fab_person"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="28dp"
        android:transitionName="@string/fab_name"/>

</RelativeLayout>